@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machine</h1>

@{
  int k = 1;
}
 
<table class="style">
  <tr>
    <th>Number</th>
    <th>MachineName</th>
  </tr>
    @foreach(Machine machine in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{k}", "Details", new { id = machine.MachineId })</td>
        <td>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</td>
      </tr>
      k+=1;
    }
</table>

<p>@Html.ActionLink("Add new Machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>