@{
  Layout = "_Layout";
}
@{
    ViewBag.Title = "Dr. Sillystringz's Factory";
}

<div class="jumbotron">
    <h1>Dr. Sillystringz's Factory</h1>
</div>
<div class="row">
    <div class="col-md-3">
        <h2>Welcome to Dr. Sillystringz's Factory</h2>
        <p>Dr. Sillystringz's Factory is a sample application that
        demonstrates how to use Entity Framework 6 in an 
        ASP.NET MVC 5 web application.</p>
    </div>
    <div class="col-md-3">
      <p>@Html.ActionLink("See all Engineers", "Index", "Engineers")</p>   
    </div>
    <div class="col-md-3">
        <p>@Html.ActionLink("Create a new Engineer", "Create", "Engineers")</p>
        <hr />
        <p>@Html.ActionLink("Add a new Machine", "Create", "Machines")</p>
        <hr />
        <p>@Html.ActionLink("All Engineers and Machines", "AllEngineerMachine", "Engineers")</p>
    </div>
    <div class="col-md-3">
        <p>@Html.ActionLink("See all Machines", "Index", "Machines")</p> 
    </div>

    @using Factory.Models;
@model List<Factory.Models.EngineerMachine>;

<h1>Engineers and Machines</h1>

@{
  int k = 1;
}
 
<table class = "style" >
  <tr>
    <th>Number</th>
    <th>Engineer Name</th>
    <th>Machine Name</th>
  </tr>
    @foreach(EngineerMachine engineerMachine in Model)
    {
      <tr>
        <td>@Html.Label($"{k}")</td>
        <td>@Html.ActionLink($"{engineerMachine.Engineer.EngineerName}", "Details", "Engineers",new { id = engineerMachine.Engineer.EngineerId })</td>
        <td>@Html.ActionLink($"{engineerMachine.Machine.MachineName}", "Details", "Machines", new { id = engineerMachine.Machine.MachineId })</td>
      </tr>
      k+=1;
    }
</table>
</div>



