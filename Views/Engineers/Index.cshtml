@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@{
  int k = 1;
}
@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 
<table class = "style" >
  <tr>
    <th>Number</th>
    <th>Engineer Name</th>
  </tr>
    @foreach(Engineer engineer in Model)
    {
      <tr>
        <td>@Html.ActionLink($"{k}", "Details", new { id = engineer.EngineerId })</td>
        <td>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</td>
      </tr>
      k+=1;
    }
</table>

<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>