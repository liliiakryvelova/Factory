@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.EngineerMachine>;

<h1>Engineers</h1>

@{
  int k = 1;
}
@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 
<table class = "style" >
  <tr>
    <th>Number</th>
    <th>Engineer Name</th>
    <th>Machine Name</th>
  </tr>
    @foreach(EngineerMachine engineerMachine in Model)
    {
      <tr>
        <td>@Html.Display($"{k}")</td>
        <td>@Html.ActionLink($"{engineerMachine.Engineer.EngineerName}", "Details", "Engineers",new { id = engineer.EngineerId })</td>
        <td>@Html.ActionLink($"{engineerMachine.Machine.EngineerName}", "Details", "Machines",new { id = engineer.EngineerId })</td>
      </tr>
      k+=1;
    }
</table>

<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>